{
  "name": "doc-tools",
  "displayName": "Doc Tools",
  "description": "tools for markdown docs",
  "publisher": "gzbang",
  "icon": "icon.png",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opensourceways/doc-tools.git"
  },
  "license": "MIT",
  "type": "module",
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "codeActionsProvider": {
      "language": "markdown"
    },
    "commands": [
      {
        "command": "markdownlint.run",
        "title": "运行Markdownlint检查"
      },
      {
        "command": "gen-toc.manual",
        "title": "生成指南 _toc.yaml"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "gen-toc.manual",
          "when": "explorerResourceIsFolder",
          "group": "gen-toc"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Markdownlint配置",
      "properties": {
        "docTools.scope.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用检查范围仅限于 docs/zh 和 docs/en 目录"
        },
        "docTools.markdown.lint.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用Markdownlint检查"
        },
        "docTools.markdown.lint.config": {
          "type": "object",
          "default": {},
          "description": "Markdownlint自定义配置"
        },
        "docTools.markdown.check.tagClosed.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用Html标签闭合检查"
        },
        "docTools.markdown.check.linkValidity.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用链接有效性检查（包含：1. 内链；2. 外链）"
        },
        "docTools.markdown.check.resourceExistence.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用资源是否存在检查（包含：1. 内链；2. 外链）"
        },
        "docTools.markdown.check.codespell.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用单词拼写检查检查"
        },
        "docTools.check.toc.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用 _toc.yaml 检查（包含：1.目录中引用的文件需要存在；2.md 文件是否加入 _toc.yaml）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "cspell-lib": "^9.0.2",
    "js-yaml": "^4.1.0",
    "markdownlint": "^0.38.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
